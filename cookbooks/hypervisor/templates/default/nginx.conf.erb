worker_processes  4;

events {
    worker_connections  1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;
    sendfile        on;
    keepalive_timeout  65;

    server {
        <% if node['hypervisor']['tls']['enable'] %>
        include ./tls-nginx-fixture.conf;
        <%else %>
        listen 80;
        <% end %>
        server_name <%= node['fqdn'] %>;
        root /usr/local/www/nginx-dist;
    }

    server {
        <% if node['hypervisor']['tls']['enable'] %>
        include ./tls-nginx-fixture.conf;
        <%else %>
        listen 80;
        <% end %>
        server_name "~^port(?P<forwarded_port>\d{5})\.<%= node['hypervisor']['http_host'] %>$";
        access_log  /var/log/nginx/vm-webhook-gotty-proxy.log;
        location  / {
            proxy_set_header Authorization "Basic $1";
            rewrite ^/(.*)/tty/?$ / break;
            rewrite ^/(.*)/tty/(.*)$ /$2 break;
            proxy_pass http://127.0.0.1:$forwarded_port;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $remote_addr;
            proxy_set_header Host $host;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            add_header 'Access-Control-Allow-Origin' 'http://localhost:4000';
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
            add_header 'Access-Control-Allow-Headers' 'Authorization';
            add_header 'Access-Control-Allow-Credentials' 'true';
            if ($request_method = 'OPTIONS') {
                add_header 'Access-Control-Allow-Origin' 'http://localhost:4000';
                add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
                add_header 'Access-Control-Allow-Headers' 'Authorization';
                add_header 'Access-Control-Allow-Credentials' 'true';
                add_header 'Access-Control-Max-Age' 1728000;
                add_header 'Content-Type' 'text/plain; charset=utf-8';
                add_header 'Content-Length' 0;
                return 204;
            }
        }
    }

    upstream netdata {
        server 127.0.0.1:19999;
        keepalive 64;
    }

    server {
        <% if node['hypervisor']['tls']['enable'] %>
        include ./tls-nginx-fixture.conf;
        <%else %>
        listen 80;
        <% end %>
        server_name netdata.<%= node['hypervisor']['http_host'] %>;
        location / {
            proxy_set_header X-Forwarded-Host $host;
            proxy_set_header X-Forwarded-Server $host;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_pass http://netdata;
            proxy_http_version 1.1;
            proxy_pass_request_headers on;
            proxy_set_header Connection "keep-alive";
            proxy_store off;
        }
    }

    upstream vm-webhook {
        server 127.0.0.1:9090;
        keepalive 64;
    }

    server {
        <% if node['hypervisor']['tls']['enable'] %>
        include ./tls-nginx-fixture.conf;
        <%else %>
        listen 80;
        <% end %>
        server_name vm-webhook.<%= node['hypervisor']['http_host'] %>;
        location / {
            if ($http_X_RUNHYVE_TOKEN != '<%= ::File.read('/usr/local/etc/nginx/.runhyvetoken') %>') {
              return 403;
            }
            proxy_set_header X-Forwarded-Host $host;
            proxy_set_header X-Forwarded-Server $host;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_pass http://vm-webhook;
            proxy_http_version 1.1;
            proxy_pass_request_headers on;
            proxy_set_header Connection "keep-alive";
            proxy_store off;
        }
    }
}
